<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:gravity="center_horizontal"
    android:orientation="vertical"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    tools:context="skywalker.c3p0.weatherassistant.RegistrarEvento"
    android:weightSum="1">


    <ImageView
        android:id="@+id/imageView"
        android:layout_width="203dp"
        android:layout_height="224dp"
        android:contentDescription=""
        android:foregroundGravity="center"
        app:srcCompat="@mipmap/ic_launcher"
        tools:ignore="ContentDescription" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="311dp"
        android:gravity="left"
        android:orientation="vertical"
        android:weightSum="1"
        android:layout_weight="0.37">



        <android.support.design.widget.TextInputLayout
            android:id="@+id/tituloevento"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="Nombre del evento">

            <android.support.design.widget.TextInputEditText
                android:id="@+id/txtNombreEvento"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:inputType="text"/>
        </android.support.design.widget.TextInputLayout>



        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="61dp"
            android:orientation="horizontal">
            <android.support.design.widget.TextInputLayout
                android:id="@+id/titulodia"
                android:layout_width="67dp"
                android:layout_height="127dp"
                android:hint="DD">

                <android.support.design.widget.TextInputEditText
                    android:id="@+id/txtFechaDia"
                    android:layout_width="67dp"
                    android:layout_height="wrap_content"
                    android:ems="2"
                    android:inputType="number" />
            </android.support.design.widget.TextInputLayout>

            <android.support.design.widget.TextInputLayout
                android:id="@+id/titulomes"
                android:layout_width="67dp"
                android:layout_height="wrap_content"
                android:hint="MM">

                <android.support.design.widget.TextInputEditText
                    android:id="@+id/txtFechaMes"
                    android:layout_width="67dp"
                    android:layout_height="wrap_content"
                    android:ems="2"
                    android:inputType="number" />
            </android.support.design.widget.TextInputLayout>

            <android.support.design.widget.TextInputLayout
                android:id="@+id/tituloano"
                android:layout_width="67dp"
                android:layout_height="wrap_content"
                android:hint="AAAA">

                <android.support.design.widget.TextInputEditText
                    android:id="@+id/txtFechaAno"
                    android:layout_width="67dp"
                    android:layout_height="wrap_content"
                    android:ems="4"
                    android:inputType="number" />
            </android.support.design.widget.TextInputLayout>
        </LinearLayout>


       <android.support.design.widget.TextInputLayout
            android:id="@+id/titulodes"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="Descripcion del evento">
            <android.support.design.widget.TextInputEditText
                android:id="@+id/txtDescripcion"
                android:layout_width="match_parent"
                android:layout_height="74dp"
                android:ems="10"
                android:inputType="textMultiLine" />
        </android.support.design.widget.TextInputLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="left"
            android:orientation="horizontal"
            android:layout_weight="0.36">

            <ImageView
                android:id="@+id/ivAttachment"
                android:layout_width="67dp"
                android:layout_height="44dp"
                app:srcCompat="@drawable/attach" />
        <Button
            android:id="@+id/b_upload"
            style="@style/Widget.AppCompat.Button.Colored"
            android:layout_width="163dp"
            android:layout_height="wrap_content"
            android:text="Subir archivo" />

        </LinearLayout>

        <TextView
            android:id="@+id/tv_file_name"
            android:layout_width="match_parent"
            android:layout_height="24dp"
            android:autoLink="web"
            android:layout_weight="0.54" />

        <Button
            android:id="@+id/b_registro"
            style="@style/Widget.AppCompat.Button.Colored"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Registrar Evento" />



    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="left"
        android:orientation="horizontal"
        android:layout_weight="0.36"
        android:weightSum="1">

        <Button
            android:id="@+id/btnVerEvento"
            style="@style/Widget.AppCompat.Button.Colored"
            android:layout_width="157dp"
            android:layout_height="wrap_content"
            android:text="Ver Eventos"
            android:layout_weight="0.49" />

        <Button
            android:id="@+id/btnSincronizar"
            style="@style/Widget.AppCompat.Button.Colored"
            android:layout_width="157dp"
            android:layout_height="wrap_content"
            android:text="Sincronizar"
            android:layout_weight="0.60" />


    </LinearLayout>
</LinearLayout>

